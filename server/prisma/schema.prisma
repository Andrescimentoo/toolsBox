// Prisma schema para o projeto Caixa de Ferramentas

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

/// Enum para linguagens suportadas
enum Language {
  JS
  TS
  Python
  IA
}

/// Enum para áreas (Front‑end ou Back‑end)
enum Area {
  FRONT
  BACK
}


model Tool {
  id           Int      @id @default(autoincrement())
  image        String // não é string 
  name         String
  funcao       String
  descricao    String
  documentacao String //é URL
  anotacoes    String?
  linguagem    Language
  area         Area
  createdAt    DateTime @default(now())
}